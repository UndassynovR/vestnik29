\id{МРНТИ 50.43.17; 68.29.15}{}

{\bfseries НАУЧНО-МЕТОДОЛОГИЧЕСКИЕ ОСНОВЫ ЦИФРОВОЙ}

{\bfseries ТРАНСФОРМАЦИИ В СИСТЕМЕ ТОЧНОГО ЗЕМЛЕДЕЛИЯ}

{\bfseries \tsp{1}А.
Алтыбаев}\fig{i/image1}{}{\bfseries ,
